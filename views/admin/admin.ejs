<%- include ("../partials/header") %>

<header class="masthead" style="background-image: url('https://mediatrend.mediamarkt.com.tr/wp-content/uploads/2019/08/Switch-skyrim.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1>Admin Paneli</h1>              
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <%adminActions.forEach((action)=>{ %>
    <div class="row">
        <div class="col-lg-4 mx-auto">
            <button id="<%= action.actionId %>" onclick="catchId(this.id)" type="button" class="btn btn-outline-primary btn-block"><%= action.displayName %></button>
        </div>
    </div>
    <% }); %>
</div>

<script>
    function catchId(clicked_id){
        if(clicked_id == 1)
        {
            window.location.href="addNewBlog";
            return false;
        }
        
    }
</script>

