<!DOCTYPE html>
<html lang="en">
    <body>
    <%- include ("../partials/header") %>
    
    <header class="masthead" style="background-image: url('https://i2.milimaj.com/i/milliyet/75/0x410/5eed61dbadcdeb1cf4a4f58f.jpg')">
     <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Sinan Şamil Sağlam</h1>
                        <span class="subheading">Ufak Tefek Teknoloji Yazıları</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <script>
        $(document).ready(function(){
            $("#myButton").click(function(){
                    var blogTitle = $("#blogTitle").val();
                    var comSentence = $("#comSentence").val();
                    var comImage = $("#comImage").val();
                    var blog = CKEDITOR.instances.myTextArea.getData();

                    var data = {
                        blogTitle : blogTitle,
                        comSentence : comSentence,
                        comImage : comImage,
                        blog : blog
                    }

                    $.post('addNewBlog', {data: data})
                        .then(function(addedBlog){
                            console.log(addedBlog);

                        });
            });
        });
    </script>
    
    <div class="container">
        <h2 style="text-align: center;">Yeni Yazı Ekle</h2>
        <form>
            <div class="form-group">
                <label for="blogTitle">Blog Başlığı</label>
                <input type="text" class="form-control" id="blogTitle" placeholder="Blog başlığı">
            </div>
            <div class="form-group">
                <label for="comSentence">Blog Alt Başlığı</label>
                <input type="text" class="form-control" id="comSentence" placeholder="Blog alt başlığı">
            </div>
            <div class="form-group">
                <label for="comImage">Blog Resmi</label>
                <input type="text" class="form-control" id="comImage" placeholder="Blog resmi">
            </div>
            <textarea name="editor" id="myTextArea"></textarea>
            <button id="myButton" type="submit" class="btn btn-primary">YAYINLA</button>
        </form>
    </div>
    

    

    

    
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    
    <script src="js/main.js"></script>

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    
    <script src="https://cdn.ckeditor.com/4.16.1/standard/ckeditor.js"></script>
    
    <script>
        CKEDITOR.replace('editor')
    </script>
    <%- include ("../partials/header") %>   
    </body> 
    
</html>
